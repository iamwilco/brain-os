{
  "name": "brain",
  "version": "0.1.0",
  "description": "Wilco OS Brain - Local-first agentic PKM system CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brain": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "server": "tsx src/server/start.ts",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "pkm",
    "knowledge-management",
    "obsidian",
    "cli",
    "ai",
    "agents"
  ],
  "author": "Wilco",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/websocket": "^11.2.0",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.7.2",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
